{
  "name": "css-loader-name-generator",
  "version": "0.0.1",
  "description": "Generator of short names of css classes for css-loader",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "incrementVersion": "npm version patch --force",
    "publish": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hronex/cssLoaderNameGenerator"
  },
  "author": "Hronex",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  }
}
